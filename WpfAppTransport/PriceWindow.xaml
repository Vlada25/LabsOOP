<Window x:Class="WpfAppTransport.PriceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppTransport"
        mc:Ignorable="d"
        Title="Цена билета заданного вида на заданный вид транспорта" Height="300" Width="400" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Margin="0 0 0 30" Height="20" Width="120" Text="Выберите транспорт:" Grid.Row="0"></TextBlock>
        <ComboBox Margin="0 30 0 0" Grid.Row="0" Height="25" Width="150" Name="TransportSelector" SelectionChanged="TransportSelector_SelectionChanged">
        </ComboBox>
        <TextBlock Margin="0 0 0 30" Height="20" Width="115" Text="Выберите вид места:" Grid.Row="1"></TextBlock>
        <ComboBox Margin="0 30 0 0" Grid.Row="1" Height="25" Width="150" Name="KindSelector">
        </ComboBox>
        <Button x:Name="Button" Width="70" Height="30" Content="Ввод" Click="Button_Click" Grid.Row="2"/>
    </Grid>
</Window>
